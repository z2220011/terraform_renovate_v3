{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "timezone": "Asia/Tokyo",

  "prTitle": "依存関係更新: {{{depName}}} を {{#if isMajor}}v{{{newMajor}}}{{else}}{{#if isPatch}}{{{newVersion}}}{{else}}v{{{newMajor}}}.{{{newMinor}}}{{/if}}{{/if}} にアップデート",
  "commitMessagePrefix": "依存関係:",
  "labels": ["依存関係", "renovate"],

  "packageRules": [
    {
      "matchUpdateTypes": ["major"],
      "labels": ["メジャーアップデート", "要確認"]
    },
    {
      "matchUpdateTypes": ["security"],
      "labels": ["セキュリティ", "緊急"]
    },
    {
      "matchManagers": ["terraform"],
      "groupName": "Terraform プロバイダー",
      "labels": ["terraform", "インフラ"],
      "commitMessagePrefix": "terraform:"
    }
  ]
}
